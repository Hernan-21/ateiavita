generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("STUDENT") // STUDENT, TEACHER, ADMIN
  accounts      Account[]
  enrollments   Enrollment[]
  taskResults   TaskResult[]
  studentFeedback Feedback[] @relation("StudentFeedback")
  teacherFeedback Feedback[] @relation("TeacherFeedback")
  
  // Relations
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String?
  color       String   @default("blue")
  iconChar    String   @default("A")
  units       Unit[]
  classes     SchoolClassCourse[]
  feedback    Feedback[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Unit {
  id        String   @id @default(uuid())
  title     String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  tasks     Task[]
  pdfUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Task {
  id        String   @id @default(uuid())
  title     String
  type      String   // video, quiz, pdf, etc.
  content   String   // JSON string of the payload
  settings  String   // JSON string of settings (points, required)
  unitId    String
  unit      Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  results   TaskResult[]
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model SchoolClass {
  id          String        @id @default(uuid())
  name        String
  code        String        @unique @default(cuid()) 
  description String?
  isArchived  Boolean       @default(false)
  courses     SchoolClassCourse[]
  enrollments Enrollment[]
  feedback    Feedback[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Enrollment {
  id        String      @id @default(cuid())
  userId    String
  classId   String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  class     SchoolClass @relation(fields: [classId], references: [id], onDelete: Cascade)
  joinedAt  DateTime    @default(now())

  @@unique([userId, classId])
}

model SchoolClassCourse {
  classId    String
  courseId   String
  class      SchoolClass    @relation(fields: [classId], references: [id], onDelete: Cascade)
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignedAt DateTime @default(now())
  status     String   @default("hidden") // hidden, prepping, teaching, taught
  isSaved    Boolean  @default(false)

  @@id([classId, courseId])
}

model TaskResult {
  id        String   @id @default(uuid())
  userId    String
  taskId    String
  score     Int      // 0-100
  completed Boolean  @default(false)
  attempts  Int      @default(0)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, taskId])
}

model Feedback {
  id        String   @id @default(uuid())
  content   String   @db.Text
  studentId String
  courseId  String
  classId   String?
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isRead    Boolean  @default(false)
  
  student   User     @relation("StudentFeedback", fields: [studentId], references: [id], onDelete: Cascade)
  author    User     @relation("TeacherFeedback", fields: [authorId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  class     SchoolClass? @relation(fields: [classId], references: [id])
  
  @@index([studentId, courseId])
}
